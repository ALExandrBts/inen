root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
max_line_length = 100
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,css}]
indent_style = tab
quote_type = single

[*.{json,yaml,yml,md}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
